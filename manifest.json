{
    "manifest_version": 3,
    "name": "Image Downloader",
    "version": "1.0",
    "description": "Download images from the current page",
    "permissions": [
        "activeTab",
        "downloads"
    ],

    "action": {
        "default_popup": "popup.html",
        "default_title": "Click to download images"
    },

    "background": {
        "service_worker": "background.js"
    },

    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}